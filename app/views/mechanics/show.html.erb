<h1>Mechanic:<%= @mechanic.name %></h1>
<p>Years of Experience:<%= @mechanic.years_of_experience %></p>
<p>Current Rides They're Working On:</p>
<% @mechanic.rides.each do |ride| %>
  <ol><ul><%= ride.name %></ul></ol>
<% end %>
<p>Add ride to workload:</p>
<%= form_tag "/mechanics/#{@mechanic.id}/rides", method: :post do %>
  <%= label_tag :ride_id %>
  <%= text_field_tag :ride_id %>
  <%= label_tag :mechanic_id %>
  <%= text_field_tag :mechanic_id, @mechanic.id %>
  <%= submit_tag "Submit" %>
<% end %>
